#!/bin/zsh
#
# dot_update
#
# `dot_update` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

export ZSH="$HOME/.dotfiles"

# Set OS defaults
echo "› Set OSX defaults"
"$ZSH/osx/set-defaults.sh"
"$ZSH/linux/set-defaults.sh"


  echo "Running all install files..."
  # run homebrew installer first
  ./homebrew/install.sh

# Install software
echo "› $ZSH/script/install"
"$ZSH/script/install"

if [ -n "$ZSH_VERSION" ]; then
  echo "› antibody update"
  antibody update
fi
