{
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "terminal.integrated.fontFamily": "Fira Code",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.gpuAcceleration": "off",
    // Terminal
    "terminal.integrated.shell.linux": "/usr/bin/zsh",
    // File Header
    "psi-header.config": {
        "forceToTop": true,
        "blankLinesAfter": 2
    },
    "psi-header.changes-tracking": {
        "isActive": true,
        "exclude": [
            "json"
        ],
        "autoHeader": "manualSave"
    },
    "psi-header.variables": [
        ["author", "Chirag Raman"]
    ],
    "psi-header.lang-config": [
        {
            "language": "python",
            "begin": "###",
            "prefix": "# ",
            "end": "###",
            "blankLinesAfter": 2,
            "beforeHeader": [
                "#!/usr/bin/env python3",
                "# -*- coding:utf-8 -*-"
            ]
        },
        {
            "language": "shellscript",
            "begin": "###",
            "prefix": "# ",
            "end": "###",
            "blankLinesAfter": 2,
            "beforeHeader": [
                "#!/bin/sh"
            ]
        },
        {
            "language": "yaml",
            "mapTo": "ruby"
        },
        {
            "language": "git-commit",
            "mapTo": "ruby"
        }
    ],
    "psi-header.templates": [
        {
            "language": "*",
            "template": [
                "File: <<filename>>",
                "Created Date: <<filecreated('dddd, MMMM Do YYYY, h:mm:ss a')>>",
                "Author: <<author>>",
                "",
                "Copyright (c) <<year>> <<author>>"
            ]
        }
    ],
    // Miscellaneous editor settings
    "editor.rulers": [79],
    "window.zoomLevel": 2,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "files.trimTrailingWhitespace": true,
    // Whitelist numpy, torch to remove lint errors
    "python.linting.pylintArgs": [
        "--extension-pkg-whitelist=numpy,torch,cv2",
        "--ignored-modules=numpy,torch,cv2",
        "--ignored-classes=numpy,torch,cv2"
    ],
    // Default C++ linting using IntelliSense
    "C_Cpp.intelliSenseEngine": "Default",
    // Auto Fetch Remote
    "git.autofetch": true,
    "editor.minimap.enabled": false,
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.inheritEnv": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "polacode.target": "snippet",
    "polacode.transparentBackground": true,
    "prettier.useTabs": true,
    "python.jediEnabled": false,
    "python.languageServer": "Microsoft",
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Snazzy Plus - Darker w/ Italics"
}